<Controls:MetroWindow x:Class="CodeerLowCodeBlazorTemplate.Designer.Lib.DDLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:CodeerLowCodeBlazorTemplate.Designer.Lib"
        mc:Ignorable="d"
        Title="DDL" Height="450" Width="800">
  
  <Controls:MetroWindow.InputBindings>
    <KeyBinding Key="F5" Command="{x:Static local:DDLWindow.RunCommand}" />
  </Controls:MetroWindow.InputBindings>
  
  <Controls:MetroWindow.CommandBindings>
    <CommandBinding Command="{x:Static local:DDLWindow.RunCommand}"
                        CanExecute="RunCommand_CanExecute"
                        Executed="RunCommand_Executed"/>
  </Controls:MetroWindow.CommandBindings>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ScrollViewer x:Name="_scroll"
                      Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

      <avalonedit:TextEditor x:Name="_sqlEditor"
                               ShowLineNumbers="True"
                               FontFamily="Consolas"
                               FontSize="14"
                               VerticalScrollBarVisibility="Visible"
                               HorizontalScrollBarVisibility="Visible"
                               SyntaxHighlighting="SQL" />
    </ScrollViewer>

    <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="8">
      <Button
                    Content="実行"
                    Padding="16,6"
                    MinWidth="100"
                    IsDefault="True"
                    ToolTip="F5 で実行"
                    Command="{x:Static local:DDLWindow.RunCommand}"/>
    </StackPanel>
  </Grid>
</Controls:MetroWindow>
